<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edT_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/ic_baseline_mail"
        android:hint="@string/email"
        android:padding="18dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edT_them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/ic_baseline_dehaze_pl"
        android:hint="@string/theme"
        android:padding="18dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edT_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/ic_baseline_chat_bubble_outline_che"
        android:hint="@string/tex"
        android:padding="18dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/btn_Nex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="14dp"
        android:text="@string/send"
        android:textSize="20sp" />
</LinearLayout>